{% extends 'AvroSupportBundle::layout.html.twig' %}
{% block content %}
    <div class="page-header">
        <h1>Edit Answer</h1>
    </div>
    <form id="avro_support_answer_form" class="form-horizontal" method="post" action="{{ path('avro_support_answer_edit', { 'id': answer.id }) }}" {{ form_enctype(answerForm) }}>  
        {% include 'AvroSupportBundle:Answer:form.html.twig' %}
        <div class="form-actions">
            <a id="deleteAnswer" class="btn pull-left confirm btn-danger" href="{{ path('avro_support_answer_delete', { 'id': answer.id }) }}" title="Are you sure you want to delete this answer?">Delete</a>
            <a class="btn" href="{{ path('avro_support_answer_list') }}">Back to list</a>
            <button class="btn btn-primary" title="Update the answer">Update Answer</button>
        </div>
    </form>
{% endblock %}

