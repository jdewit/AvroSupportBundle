{% extends 'AvroSupportBundle::layout.html.twig' %}
{% block support_content %}
    <div class="page-header">
        <a class="btn btn-large pull-right" href="{{ path('avro_support_question_show', {'id': question.id}) }}"><i class="icon-arrow-left"></i> Back</a>
        <h1>Edit Question</h1>
    </div>
    <form id="avro_support_question_form" method="post" action="{{ path('avro_support_question_edit', { 'id': question.id }) }}" {{ form_enctype(form) }}>
        {% include 'AvroSupportBundle:Question:form.html.twig' %}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn-large" title="Update the question"><i class="icon-ok icon-white"></i> Submit</button>
            <a id="deleteQuestion" class="btn btn-large pull-right confirm btn-danger" href="{{ path('avro_support_question_delete', { 'id': question.id }) }}" title="Are you sure you want to delete this question?"><i class="icon-remove icon-white"></i> Delete</a>
        </div>
    </form>
{% endblock %}

