{% extends 'AvroSupportBundle::layout.html.twig' %}
{% block support_content %}

    <div class="page-header">
      {% if backToQuestion is same as(true) %}
        {% if admin is same as(true) %}
          <a class="btn btn-default pull-right" href="{{ path('avro_support_question_show', {'id': question.id, 'admin': 'true'}) }}"><i class="fa fa-arrow-left"></i> Back</a>
        {% else %}
          <a class="btn btn-default pull-right" href="{{ path('avro_support_question_show', {'id': question.id}) }}"><i class="fa fa-arrow-left"></i> Back</a>
        {% endif %}
      {% else %}
        {% if admin is same as(true) %}
          <a class="btn btn-default pull-right" href="{{ path('avro_support_admin_list') }}"><i class="fa fa-arrow-left"></i> Back</a>
        {% else %}
          <a class="btn btn-default pull-right" href="{{ path('avro_support_question_list') }}"><i class="fa fa-arrow-left"></i> Back</a>
        {% endif %}
      {% endif %}
        <h1>Edit Question</h1>
    </div>

    <form id="avro_support_question_form" method="POST" action="{{ path('avro_support_question_edit', { 'id': question.id }) }}" {{ form_enctype(form) }}>

      <div class="row">
        {% include 'AvroSupportBundle:Question:form.html.twig' with { 'minRole': minRole } %}
      </div>

      <hr>

      <button type="submit" class="btn btn-primary btn-lg" title="Update the question"><i class="fa fa-check"></i> Submit</button>

      <a id="deleteQuestion" class="btn pull-right confirm btn-danger" href="{{ path('avro_support_question_delete', { 'id': question.id }) }}" title="Are you sure you want to delete this question?"><i class="fa fa-trash-o"></i> Delete</a>

    </form>

{% endblock %}

