<table id="question-table" class="table-styled table-bordered table-condensed table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Last Updated</th>
            {#<th>{{ paginator.sortable('Title', 'title')|raw }}</th>#}
            {#<th>{{ paginator.sortable('UpdatedAt', 'updatedAt')|raw }}</th>#}
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for question in questions %}
            <tr>
                <td><a href="{{ path('avro_support_question_show', {'slug': question.slug}) }}">{{ question.title }}</a></td>
                <td class="center-align">{{ question.createdAt|date("F jS, Y") }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('avro_support_question_show', {'slug':question.slug}) }}" class="btn"><i class="icon-share-alt"></i> View</a>
                        <button class="btn dropdown-toggle" data-toggle="dropdown"> <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a id="editQuestion" href="{{ path('avro_support_question_edit', {'slug': question.slug}) }}"><i class="icon-pencil"></i> Edit</a></li>
                            <li><a class="confirm" title="Are you sure you want to delete this question?" href="{{ path('avro_support_question_delete', {'id': question.id}) }}"><i class="icon-remove"></i> Delete</a></li>
                            <li class="divider"></li>
                            {% if question.isSolved %}
                                <li><a href="{{ path('avro_support_question_open', {'id': question.id}) }}"><i class="icon-ok"></i> Reopen Question</a></li>
                            {% else %}
                                <li><a href="{{ path('avro_support_question_close', {'id': question.id}) }}"><i class="icon-ok"></i> Mark as Solved</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="0" class="left-align">0 questions found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<div class="center-align">
    {#{{ paginator.render()|raw }}#}
</div>
